{% extends 'web/web-base.html.twig' %}

{% block body %}

<div class="generic-content">
	<div class="container-fluid content-container page-news">
		<div class="container">
            <div class="row">
                <div class="title">
                    {{ 'tid_news_title'|trans|upper }}
                </div>
            </div>
			<div class="row">
				<div class="col-lg-12">
				{% for newsRow in newsInfo %}
					<div class="row mb-3">
					{% for news in newsRow %}
						<div class="col-lg-4 mt-4">
							<a href="#">
								<img src={{ '/images/news/' ~ news.id ~ '/main-page-image.jpg' }} class="img-fluid">
								<h4 class="mt-3">{{ news.title }}</h4>
							</a>
							<div id="date">{{ news.date }}</div>
							<br>
							<p>{{ news.description }}</p>
							<br>
							<a href="#" id="more-info">Continua llegint ></a>
						</div>
					{% endfor %}
					</div>
				{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}