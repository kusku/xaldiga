{% extends 'web/web-base.html.twig' %}

{% block body %}

<div class="generic-content">
	<div class="container-fluid content-container">
		<div class="container">
            <div class="row">
                <div class="title">
                    {{ 'tid_entitat_title'|trans|upper }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 content-image">
                    <img id='entitat' src='/images/entitat/entitat.png' onClick=clickedThumbImage('entitat'); >
                </div>
                <div class="col-lg-8 paragraph-entitat">
                    {{ 'tid_entitat_desc'|trans|raw }}
                </div>
            </div>
		</div>
	</div>
</div>

{% endblock %}