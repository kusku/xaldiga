{% extends 'base.html.twig' %}

{% block body %}

<div class="generic-content">
	<div class="parallax">
		<div class="container-fluid">
		<div class="container portrait-caption">{{ genericInfo.title|trans|upper }}</div>
		</div>
	</div>
	<div class="container-fluid content-container">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<p class="p-desc">{{ genericInfo.description|trans|raw }}</p>
				</div>
				<div class="col-lg-6 content-image">
					<img id="moscada-infantil" src="/images/infantil/moscada-infantil.jpg" class="thumb-image" alt="Moscada Infantil" onClick="clickedThumbImage('moscada-infantil');">
				</div>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		<div class="container">

            {% for infantilElement in infantilElements %}
                <div class="row row-title-space">
                    <div class="col">
                        <h1>{{ infantilElement.title|trans|capitalize }}</h1>
                    </div>
                </div>
                <div class="row row-margin">
                    <div class="col-lg-6 content-image">
                        <img class='thumb-image' id='{{ infantilElement.title }}' src='{{ infantilElement.url }}' alt='{{ infantilElement.title|trans|capitalize }}' onClick=clickedThumbImage('{{ infantilElement.title }}'); >
                    </div>
                    <div class="col-lg-6">
                        <p class="p-desc">{{ infantilElement.description|trans|raw }}</p>
                    </div>
                </div>
            {% endfor %}


		</div>
	</div>
</div>

{% endblock %}